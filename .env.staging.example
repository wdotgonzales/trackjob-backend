# Django Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control

# =============================================================================
# DEBUG SETTINGS
# =============================================================================
# Set to 0 for production, 1 for development
DEBUG=0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a new secret key for each environment
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# =============================================================================
# ALLOWED HOSTS
# =============================================================================
# Comma-separated list of allowed hosts for Django
DJANGO_ALLOWED_HOSTS=your-domain.com www.your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database engine (postgresql, mysql, sqlite3)
SQL_ENGINE=django.db.backends.mysql

# Database connection details
SQL_DATABASE=your_database_name
SQL_USER=your_db_username
SQL_PASSWORD=your_db_password
SQL_HOST=your-database-host.amazonaws.com
SQL_PORT=3306

# MySQL specific settings
MYSQL_ROOT_PASSWORD=your_mysql_root_password
DATABASE=mysql

# =============================================================================
# REVERSE PROXY SETTINGS (for Docker/nginx-proxy)
# =============================================================================
VIRTUAL_HOST=your-domain.com
VIRTUAL_PORT=8000
LETSENCRYPT_HOST=your-domain.com

# =============================================================================
# CSRF PROTECTION
# =============================================================================
# Trusted origins for CSRF protection
CSRF_TRUSTED_ORIGINS=https://your-domain.com https://www.your-domain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email backend for Django
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Email authentication
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
